<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="qf.com.sqlite.MainActivity">

    <Button
        android:id="@+id/insertBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="insertData"
        android:background="#f00"
        android:textSize="30sp"
        android:text="添加"/>
    <Button
        android:id="@+id/updateBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="updateData"
        android:layout_below="@+id/insertBtn"
        android:textSize="30sp"
        android:background="#0f0"
        android:text="修改"/>
    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="deleteData"
        android:layout_below="@+id/updateBtn"
        android:textSize="30sp"
        android:background="#00f"
        android:text="删除"/>
    <Button
        android:id="@+id/quetyBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="quetyData"
        android:layout_below="@id/deleteBtn"
        android:background="#ff0"
        android:textSize="30sp"
        android:text="查询"/>

    <TextView
        android:id="@+id/tv"
        android:layout_below="@id/quetyBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f"
        />
</RelativeLayout>
